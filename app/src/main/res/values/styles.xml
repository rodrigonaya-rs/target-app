<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="font">@font/open_sans_regular</item>
    </style>

    <style name="Text">
        <item name="font">@font/open_sans_regular</item>
    </style>

    <style name="Text.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subtitle" parent="Text.Title">
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Body" parent="Text.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="FormInput" />

    <style name="FormInput.Title" parent="Text.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="FormInput.EditText" parent="Text">
        <item name="android:background">@drawable/bg_form_input_edit_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="FormInput.Error" parent="Text">
        <item name="android:textColor">@color/inputErrorColor</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
